@model List<SportsComplex.Application.ViewModels.TournmentViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@section scripts
{
    
}
<div class="container" style="margin-top: 10px">
    <p>
        <a class="btn btn-primary" href="@Url.Action("AddTournment", "Admin")">Create New Tournment</a>
        <a class="btn btn-primary" href="@Url.Action("AddTournment", "Admin")">Delete Tournment</a>
    </p>
    <div class="table-responsive">
        <table id="mytable" class="table table-bordered">

            <thead>
                <tr>
                    <th class="text-center"><input type="checkbox" id="checkall" /></th>
                    <th class="text-center">Tournment Name</th>
                    <th class="text-center">Tournment Fees</th>
                    <th class="text-center">Last Date for Registration</th>
                    <th class="text-center" style="width: 180px">Enroll</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var eachModel in Model)
                {
                    <tr>
                        <td class="text-center"><input type="checkbox" class="checkthis" value="@eachModel.IsSelected" /></td>
                        <td class="text-center">@eachModel.Name</td>
                        <td class="text-center">@eachModel.Fees</td>
                        <td class="text-center">@eachModel.LastDate</td>
                        <td class="text-center"><input type="checkbox" value="true" @(eachModel.IsEnrolled ? "checked=\"checked\"" : "") /></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

