<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Larsen &amp; Toubro - Sports Complex</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/customMenu.css" rel="stylesheet" />
    @RenderSection("scripts", required: false)
</head>
<body>
<div class="container" style="margin-top: 10px;">
    <div class="row">
        <a href="/" title="Home">
            <img src="~/Images/logo_larsen_toubro.jpg" alt="Home" />
        </a>
    </div>
    <div class="row pull-right" style="margin-bottom: 5px;">
        <span> Welcome @User.Identity.Name </span>
        | <a href="@Url.Action("Logout", "Admin")"><span> Sign Out </span></a>
    </div>

</div>
    <nav class="container navbar-custom navbar-static-top">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="@Url.Action("Index", "Admin")">Home</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resource Booking<b class="caret"></b></a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="@Url.Action("Badminton", "Module")">Badminton</a></li>
                        <li><a href="@Url.Action("Billiards", "Module")">Billiards</a></li>
                    </ul>
                </li>
                <li class="active"><a href="@Url.Action("Gym", "Module")">Gymnasium</a></li>
                <li class="active"><a href="@Url.Action("Tournment", "Admin")">Tournment</a></li>
                <li class="active"><a href="@Url.Action("Gallery", "Module")">Gallery</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sports Report<b class="caret"></b></a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="@Url.Action("ChargeResource", "Admin")">Resoure Charges</a></li>
                        <li><a href="@Url.Action("ChargeGym", "Admin")">Gym Charges</a></li>
                        <li><a href="@Url.Action("ChargeTournment", "Admin")">Tournment Charges</a></li>
                        <li><a href="@Url.Action("AllCharges", "Admin")">All Charges</a></li>
                    </ul>
                </li>
                <li class="active"><a href="@Url.Action("ManageNews", "Admin")">News</a></li>
                @*<li class="active"><a href="#">Admin Rights</a></li>*@
            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
    <div style="height: 100%;">
        @RenderBody()
    </div>
    <footer class="text-center">
        <hr />
        <p>&copy; @DateTime.Now.Year - Sports Complex Application</p>
    </footer>
</body>

</html>