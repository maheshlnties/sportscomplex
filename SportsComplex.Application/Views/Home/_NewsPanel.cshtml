@using SportsComplex.Application.ViewModels;
@model IEnumerable<NewsViewModel>

    <script src="~/Scripts/newspanel.js"></script>


    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-list-alt"></span><b> Latest News </b>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    <ul class="demo1" style="overflow-y: hidden; height: 210px;">
                        @foreach (var eachNews in Model)
                    {
                            <li class="news-item">
                                <table cellpadding="4">
                                    <tbody>
                                        <tr>
                                            <td><img src="~/Images/Badminton.jpg" width="60" class="img-circle"></td>
                                            <td style="@(eachNews.Highlight? "font-weight: bold" : "font-weight: normal")">@eachNews.Content</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </li>
                    }
                    </ul>
                </div>
            </div>
        </div>
    </div>
