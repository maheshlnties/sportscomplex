@model List<SportsComplex.Application.ViewModels.EmployeeViewModel>

    @{
        ViewBag.Title = "Search";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @section scripts
{
        <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">
        <script>
            $(document).ready(function () {
                $('#table_id').dataTable();
            });
        </script>
    }

    <div style="margin-top: 80px; min-height: 400px">
        <table id="table_id"
               class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">PS Number</th>
                    <th class="text-center">Employee Name</th>
                    <th class="text-center">Mobile</th>
                    <th class="text-center">Email</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var eachModel in Model)
                {
                    <tr>
                        <td class="text-center">@eachModel.PsNumber</td>
                        <td class="text-center">@eachModel.Name</td>
                        <td class="text-center">@eachModel.Mobile</td>
                        <td class="text-center">@eachModel.Email</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <div>
        @Html.ActionLink("Back to Login", "Index")
    </div>
