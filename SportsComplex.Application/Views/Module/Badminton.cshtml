<div class="container" style="margin-top: 50px">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="text-align: center">Sports Resource</th>
                @foreach (var eachHeader in Model.Headers)
                {
                    <th style="text-align: center">@eachHeader</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows; i++)
            {
                <tr>
                    <td style="text-align: center">Badminton @(i + 1) </td>
                    @for (int j = 0; j < Model.Headers.Count; j++)
                    {
                        <td style="text-align: center"><button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Badminton @(i + 1) , @Model.Headers[j]">Book</button></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>