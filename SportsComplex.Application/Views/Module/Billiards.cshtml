@using SportsComplex.Application.Helper
@using SportsComplex.Models
@model SportsComplex.Application.ViewModels.ResourceViewModel
@{
    var principal = (CustomPrincipal)HttpContext.Current.User;
    switch (principal.Role)
    {
        case UserRoles.Employee:
            Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
            break;
        case UserRoles.Admin:
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
            break;
    }
}


@section scripts
{
    <link href="~/Content/largeButton.css" rel="stylesheet"/>
<script type="text/javascript">
        $(function() {
            $(":button").click(function(event) {
                event.preventDefault();
                if (confirm("Are you sure you want to submit ?")) {
                    var jsonArray = [];
                    @foreach (var eachHeader in Model.Headers)
                    {
                        @:jsonArray.push("@eachHeader");
                    }
                    var resource = {
                        Headers: jsonArray,
                        Rows: @(Model.Rows)
                    };
                    $.ajax({
                        type: "POST",
                        url: '/Module/Billiards',
                        contentType: 'application/json; charset=utf-8',
                        data: JSON.stringify({"resource": resource,"id": this.id}),
                        success: function (data) {
                            window.location.reload(true);
                    }
                    });
                } else
                    alert("clicked cancel");
            });
        });
</script>
}

<div class="container" style="margin-top: 50px">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="text-align: center">Sports Resource</th>
                @foreach (var eachHeader in Model.Headers)
                {
                    <th style="text-align: center">@eachHeader</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows; i++)
            {
                <tr>
                    <td style="text-align: center">Billiards @(i + 1) </td>
                    @for (var j = 0; j < Model.Headers.Count; j++)
                    {
                        <td style="text-align: center">
                            <button type="button" @(Model.IsBooked(Model.GetElementId("Billiards " + (i + 1), Model.Headers[j])) ? "disabled" : "") class="btn btn-primary" id="@Model.GetElementId("Billiards " + (i + 1), Model.Headers[j])" data-toggle="tooltip" data-placement="top" title="Billiards @(i + 1) , @Model.Headers[j]">Book</button>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
